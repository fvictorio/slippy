{
  "name": "@slippy-lint/slippy",
  "version": "0.1.2",
  "description": "A simple but powerful linter for Solidity",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fvictorio/slippy"
  },
  "bin": {
    "slippy": "./dist/cli/cli.js"
  },
  "exports": {
    ".": "./dist/lib.js"
  },
  "files": [
    "dist/",
    "src/",
    "docs",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "check": "tsc --noEmit",
    "test": "vitest --run --allowOnly false",
    "test:coverage": "vitest --run --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "prettier --check . && eslint . && knip",
    "lint:fix": "prettier --write . && eslint --fix .",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "keywords": [
    "solidity",
    "linter",
    "ethereum",
    "slang"
  ],
  "author": "Franco Victorio",
  "license": "MIT",
  "packageManager": "pnpm@10.5.2",
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@types/micromatch": "^4.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.0.13",
    "@types/semver": "^7.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "knip": "^5.61.3",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "dependencies": {
    "@nomicfoundation/slang": "^1.2.1",
    "chalk": "^5.4.1",
    "fast-glob": "^3.3.3",
    "micromatch": "^4.0.8",
    "minimist": "^1.2.8",
    "semver": "^7.7.2",
    "workerpool": "^9.3.3",
    "zod": "^4.0.10"
  }
}
